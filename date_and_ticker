def valid_date(year1,month1,day1,year2,month2,day2):
    date1=datetime.datetime(year1,month1,day1)
    date2=datetime.datetime(year2,month2,day2)
    if date2>date1:
        return True
    else:
        return False
    
x=int(input("Enter the start year: "))
y=int(input("Enter the start month(1-12): "))
z=int(input("Enter the start day: "))
start=datetime.datetime(x,y,z)
option=input("Do you want to manually enter an end date?(Y/N)")
while option !="Y" and option !='y' and option !='N' and option !='n':
    print("Invalid option try again!")
    option=input("Do you want to manually enter an end date?(Y/N)")
if option=='Y' or option=='y':
    p=int(input("Enter the end year: "))
    q=int(input("Enter the end month(1-12): "))
    r=int(input("Enter the end day: "))
    while (valid_date(x,y,z,p,q,r))==False:
        print("Invalid date! Try again")
        p=int(input("Enter the end year: "))
        q=int(input("Enter the end month(1-12): "))
        r=int(input("Enter the end day: "))
        
    
    end=datetime.datetime(p,q,r)
elif option=='N'or option=="n":
    now=datetime.datetime.now()
    a=now.year
    b=now.month
    c=now.day
    end=datetime.datetime(a,b,c)
    

name=input("Enter the ticker name:")
print("Stock is:", name)

data.DataReader(name=name,data_source="yahoo",start=start,end=end)
